{
  "name": "universal-liquidator",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:affaxltd/universal-liquidator.git",
  "author": "Affax <me@affax.dev>",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "@truffle/hdwallet-provider": "^1.2.0",
    "@uniswap/lib": "^4.0.0-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "truffle": "^5.1.56",
    "truffle-assertions": "^0.9.2"
  },
  "scripts": {
    "compile": "yarn truffle compile",
    "deploy:kovan": "yarn truffle migrate --network kovan",
    "deploy:mainnet": "yarn truffle migrate --network mainnet",
    "deploy:fork": "yarn truffle migrate --network fork",
    "console:fork": "yarn truffle console --network fork",
    "test:fork": "yarn truffle test --network fork ./test/mainnet-fork-tests.js",
    "run:fork": "yarn ganache-cli --fork https://mainnet.infura.io/v3/bd0c2cf1b7de43c9a3a70ce2f577d29c --defaultBalanceEther 1000 --quiet",
    "suite:fork": "yarn concurrently --kill-others \"yarn run:fork\" \"yarn test:fork\""
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ganache-cli": "^6.12.1",
    "prettier": "^2.2.1"
  }
}
